<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <title>StudySync - Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-gray-100 text-gray-800 font-sans">

    <div class="container mx-auto p-6 max-w-4xl">
        <header class="flex justify-between items-center mb-8">
            <h1 class="text-3xl font-bold text-indigo-600">StudySync üìä</h1>
            <a href="/subjects/new" class="bg-indigo-600 text-white px-4 py-2 rounded shadow hover:bg-indigo-700 transition">
                + ÁßëÁõÆ„ÇíËøΩÂä†
            </a>
        </header>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
            
            <div class="bg-white p-6 rounded-lg shadow-md">
                <h2 class="text-xl font-bold mb-4">Â≠¶Áøí„ÇíË®òÈå≤</h2>
                <form action="/logs" method="POST" class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700">ÁßëÁõÆ</label>
                        <select name="subjectId" class="w-full mt-1 p-2 border rounded" required>
                            <% if (subjects.length === 0) { %>
                                <option disabled selected>ÁßëÁõÆ„Åå„ÅÇ„Çä„Åæ„Åõ„Çì</option>
                            <% } %>
                            <% subjects.forEach(subject => { %>
                                <option value="<%= subject.id %>"><%= subject.name %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">ÊôÇÈñì (ÂàÜ)</label>
                        <input type="number" name="minutes" class="w-full mt-1 p-2 border rounded" required min="1">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">„É°„É¢</label>
                        <input type="text" name="comment" class="w-full mt-1 p-2 border rounded" placeholder="‰æã: P.30„ÄúP.35">
                    </div>
                    <button type="submit" class="w-full bg-green-500 text-white py-2 rounded hover:bg-green-600 transition font-bold">
                        Ë®òÈå≤„Åô„Çã
                    </button>
                </form>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-md flex flex-col items-center justify-center">
                <h2 class="text-xl font-bold mb-4">Â≠¶Áøí„Éê„É©„É≥„Çπ</h2>
                <% if (stats.length > 0) { %>
                    <canvas id="studyChart"></canvas>
                <% } else { %>
                    <p class="text-gray-400">„Éá„Éº„Çø„Åå„ÅÇ„Çä„Åæ„Åõ„Çì</p>
                <% } %>
            </div>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-xl font-bold mb-4">ÊúÄËøë„ÅÆÂ±•Ê≠¥</h2>
            <div class="overflow-x-auto">
                <table class="min-w-full text-left text-sm">
                    <thead class="bg-gray-50 text-gray-600 uppercase">
                        <tr>
                            <th class="py-3 px-4">ÁßëÁõÆ</th>
                            <th class="py-3 px-4">ÊôÇÈñì</th>
                            <th class="py-3 px-4">„É°„É¢</th>
                            <th class="py-3 px-4">Êó•ÊôÇ</th>
                            <th class="py-3 px-4">Êìç‰Ωú</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        <% logs.forEach(log => { %>
                            <tr>
                                <td class="py-3 px-4">
                                    <span class="px-2 py-1 rounded text-xs text-white" style="background-color: <%= log.subject.color %>">
                                        <%= log.subject.name %>
                                    </span>
                                </td>
                                <td class="py-3 px-4 font-bold"><%= log.minutes %>ÂàÜ</td>
                                <td class="py-3 px-4 text-gray-500"><%= log.comment || '-' %></td>
                                <td class="py-3 px-4 text-gray-400"><%= new Date(log.createdAt).toLocaleDateString() %></td>
                                <td class="py-3 px-4">
                                    <form action="/logs/delete/<%= log.id %>" method="POST" onsubmit="return confirm('ÂâäÈô§„Åó„Åæ„Åô„ÅãÔºü');">
                                        <button type="submit" class="text-red-500 hover:text-red-700">ÂâäÈô§</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        // „Çµ„Éº„Éê„Éº„Åã„ÇâÊ∏°„Åï„Çå„Åü„Éá„Éº„Çø„ÇíJS„Åß‰Ωø„Åà„Çã„Çà„ÅÜ„Å´Â§âÊèõ
        const subjectsData = <%- JSON.stringify(subjects) %>;
        const statsData = <%- JSON.stringify(stats) %>;

        if (statsData.length > 0) {
            const ctx = document.getElementById('studyChart').getContext('2d');
            
            // „Éá„Éº„ÇøÊï¥ÂΩ¢
            const labels = [];
            const dataPoints = [];
            const bgColors = [];

            statsData.forEach(stat => {
                const subject = subjectsData.find(s => s.id === stat.subjectId);
                if (subject) {
                    labels.push(subject.name);
                    dataPoints.push(stat._sum.minutes);
                    bgColors.push(subject.color);
                }
            });

            new Chart(ctx, {
                type: 'doughnut', // „Éâ„Éº„Éä„ÉÑ„Ç∞„É©„Éï
                data: {
                    labels: labels,
                    datasets: [{
                        data: dataPoints,
                        backgroundColor: bgColors,
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: { position: 'bottom' }
                    }
                }
            });
        }
    </script>
</body>
</html>